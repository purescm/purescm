{
  "name": "purescm",
  "version": "1.0.1-pre.0",
  "main": "index.js",
  "type": "module",
  "files": [
    "vendor/**/*.sls",
    "bundle/index.js"
  ],
  "bin": {
    "purescm": "./index.js"
  },
  "scripts": {
    "version": "echo 'export const version = \"v'$npm_package_version'\";' > ./src/Version.js && git add .",
    "test": "spago test",
    "build": "spago build && purs-backend-es bundle-module -m Main --int-tags --platform=node --minify --to=./bundle/index.js",
    "prerelease": "npm version prerelease --preid=pre",
    "prepublishOnly": "rm -rf bundle output output-es && npm run build"
  }
}
